-var duration = 0;
each track in category.posts
    -duration += parseFloat(track.duration)

if duration > 1200
    .theme
        .item-heading
            .row.middle-xs
                .col-xs-8.col-md-8
                    h2 #{category.name}
                    .deco
                        img(src="/img/visuals/#{category.name.toLowerCase()}.svg" onerror="this.className='img404'")
                .col-xs-4.col-md-4.text-right
                    .metas
                        if duration > 3600
                            .duration #{moment("2015-01-01").startOf('day').seconds(duration).format("HH:mm:ss", { trunc: true })}
                        else
                            .duration #{moment("2015-01-01").startOf('day').seconds(duration).format("mm:ss", { trunc: true })}
                        
                        img(src="/img/play.svg" alt="play" class="play")
                        img(src="/img/pause.svg" alt="pause" class="pause")

        .item-body
            .mix
                each track in category.posts
                    //pre #{track}
                    include track
            .contrib
                form(class="contrib--form" method="post" action="/api/contrib/#{category._id}")
                    input(type="text" name="url" placeholder="Add Youtube video here..." autocomplete="off" value="")
                    input(type="submit" value="‚Üù")